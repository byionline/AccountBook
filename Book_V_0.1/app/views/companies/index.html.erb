<h2 style="font-size: 40px; margin-bottom: 40px; color: #f70b0b">
  <span style="color: #1ab394; font-weight: 900">Infotech</span>
</h2>
 

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-example">
      <thead>
        <tr>
          <th>Company Name</th>
          
          
          <th width="101px">Buttons</th>
        </tr>
      </thead>
    <tbody>
      <% @companies.each do |f| %>
      <tr>
        <td><%= f.name %></td>
        <td>
          <%= link_to edit_company_path(f.id), :class=>'btn btn-white
          btn-bitbucket' do %>
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <%= link_to 'New Company', new_company_path, :class=>"btn btn-sm btn-primary
  m-t-n-xs" %>
</div>
