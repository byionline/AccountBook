<% content_for :title, "All Batch" %>
<div class="fixed-action-btn " style="bottom: 50px; right: 19px;">
   <%= link_to new_batch_path do %>
  <span class="fa fa-plus-circle fa-4x"></span>
   <% end %>


</div>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>All Product Batches Data</h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">

        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover dataTables-example">
            <thead>
              <tr>
                <th>Active</th>
                <th>Batch No.</th>
                <th>Product</th>
                <th>Stock</th>
                <th>Packing</th>
                <th>Purchase Rate</th>
                <th>Sales Rate</th>
                <th>Wholesale Rate</th>
                <th>MRP</th>
                <th>Expiry</th>
                <th width="101px">Buttons</th>
              </tr>
            </thead>

            <tbody>

            <% @batches.each do |f| %>

              <tr class="">
                <td><%= f.rkbatchstatus %></td>
                <td><%= f.rkbatchno %></td>
                <td><%= f.product.rkproductname  %></td>
                <td><%= f.rkbatchstock %></td>
                <td><%= f.rkbatchpacking %></td>
                <td><%= f.rkbatchpurchaserate %></td>
                <td><%= f.rkbatchsalerate %></td>
                <td><%= f.rkbatchwholesalerate %></td>
                <td><%= f.rkbatchmrp %></td>
                <td><%= f.rkbatchexpiry.strftime('%d/%y') %></td>
                <td>
                  <%= link_to batch_path(f.id), :class=>'btn btn-white btn-bitbucket', method: :delete, data: {confirm: 'Are you sure?'} do %>
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to edit_batch_path(f.id), :class=>'btn btn-white btn-bitbucket' do %>
                      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to batch_path(f.id), :class=>'btn btn-white btn-bitbucket' do %>
                      <i class="fa fa-print" aria-hidden="true"></i>
                  <% end %>
                </td>
              </tr>

            <% end %>

            </tbody>


          </table>
        </div>

      </div>
    </div>
  </div>
</div>
