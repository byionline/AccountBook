<% content_for :title, "All Product Category" %>

<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>All Product Category</h5>
    <div class="ibox-tools">
      <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
      </a>
      <a class="close-link">
        <i class="fa fa-times"></i>
      </a>
    </div>
  </div>
  <div class="ibox-content">
    <div class="row">
      <%= form_for @productcategory do|f| %>
          <div class="col-sm-6 b-r">
            <div class="form-group">
              <label>Category Code</label>
              <%= f.text_field :rkproductcategorycode, :placeholder=>"Product Category Code", :class=>"form-control", :required=>'' %>
            </div>
            <div class="form-group">
              <label>Category Name</label>
              <%= f.text_field :rkproductcategoryname, :placeholder=>"Product Category Name", :class=>"form-control", :required=>'' %>
            </div>
            <div class="form-group">
              <label>Select Account</label>
<%= collection_select( :productcategory, :chartaccount_id, Chartaccount.all, :id, :rkcoaname, {}, { :multiple => false, :class=>'form-control m-b' } ) %>


            </div>
          </div>

          <div class="col-sm-12">
            <div class="hr-line-dashed"></div>
            <%= f.submit "Create Product Category", :class=>"btn btn-sm btn-primary pull-right m-t-n-xs" %>
            <%= link_to 'Back', productcategories_path, :class=>"btn btn-sm btn-primary m-t-n-xs" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
