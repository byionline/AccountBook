<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <%= form_with(model: @company, local: true) do |f| %>
          <% if company.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(company.errors.count, "error") %>
                prohibited this company from being saved:</h2>
              <ul>
                <% company.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="col-sm-6">
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label>Company Name</label>
<%= f.text_field :name, :placeholder=>"Enter Company Name", :class=>"form-control" %>

                </div>
              </div>
           
            </div>
          </div>

        <%= f.submit "Apply & Submit", :class=>"btn btn-sm btn-primary pull-right m-t-n-xs" %>
        <%= link_to 'Back', companies_path, :class=>"btn btn-sm btn-primary m-t-n-xs" %>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>
