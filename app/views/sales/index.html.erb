<p id="notice"><%= notice %></p>

<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>Rksaleinvoice</th>
      <th>Rksaledate</th>
      <th>Rksaleduedate</th>
      <th>Customer</th>
      <th>Product</th>
      <th>Employee</th>
      <th>Accountjournal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.rksaleinvoice %></td>
        <td><%= sale.rksaledate %></td>
        <td><%= sale.rksaleduedate %></td>
        <td><%= sale.customer %></td>
        <td><%= sale.product %></td>
        <td><%= sale.employee %></td>
        <td><%= sale.accountjournal %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

