<% content_for :title, "All Account Groups" %>
<div class="fixed-action-btn " style="bottom: 50px; right: 19px;">
   <%= link_to new_accountgroup_path do %>
  <span class="fa fa-plus-circle fa-4x"></span>
   <% end %>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>Account Group</h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">

        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover dataTables-example">
            <thead>
              <tr>
                <th>Account Code</th>
                <th>Account Name</th>
                <th>Account Category</th>
                <th width="101px">Buttons</th>
              </tr>
            </thead>

            <tbody>
              <%= paginate @accountgroups %>
              <% @accountgroups.each do |accountgroup| %>

              <tr class="">
                <td><%= accountgroup.rkaccountcode %></td>
                <td><%= accountgroup.rkaccountname %></td>
                <td><%= accountgroup.rkaccounttype %></td>



                 <td>
                  <%= link_to accountgroup_path(accountgroup.id), :class=>'btn btn-white btn-bitbucket', method: :delete, data: {confirm: 'Are you sure?'} do %>
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to edit_accountgroup_path(accountgroup.id), :class=>'btn btn-white btn-bitbucket' do %>
                      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                  <% end %>
                </td>
              </tr>

            <% end %>

            </tbody>


          </table>
        </div>

      </div>
    </div>
  </div>
</div>
